<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
 "-//Hibernate/Hibernate Mapping DTD//EN"
 "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd"> 

<hibernate-mapping>
   <class name="models.Employee" table="EMPLOYEE" discriminator-value="emp">
      <meta attribute="class-description">
         This class contains the employee detail. 
      </meta>
      <id name="id" type="int" column="ID">
         <generator class="increment"/>
      </id>
      <discriminator column="type" type="string"></discriminator> 
      <property name="firstName" column="FIRST_NAME" type="string"/>
      <property name="lastName" column="LAST_NAME" type="string"/>
            
	<subclass name="models.Fulltime" discriminator-value="fulltime_emp">  
	<property name="salary" column="SALARY" type="long" />  
	<property name="vacation" column="VACATION" type="long" />  
	</subclass>  

	<subclass name="models.Parttime" discriminator-value="parttime_emp">  
	<property name="salary" column="SALARY" type="long" />  
	<property name="workhours" column="WORKHOURS" type="long" />  
	</subclass> 
	
	<subclass name="models.Intern" discriminator-value="intern_emp">  
	<property name="wage" column="WAGE" type="long" />  
	</subclass> 	            

	<subclass name="models.Contracter" discriminator-value="contract_emp">  
	<property name="wage" column="WAGE" type="long" />  
	<property name="overtimehours" column="OVERTIMEHOURS" type="long" />
	</subclass>

  </class>  
  </hibernate-mapping> 